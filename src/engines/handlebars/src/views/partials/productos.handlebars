<h2 class="text-primary m-3 me-auto text-center">Vista de Productos</h2>
{{#if length}}
    <div class="table-responsive p-3">
        <table class="table table-dark">
            <tr> 
                <th class="text-center"><b>ID</b></th> 
                <th class="text-center"><b>Nombre</b></th> 
                <th class="text-center"><b>Precio</b></th>
                <th class="text-center"><b>URL</b></th> 
            </tr>
            {{#each prod}}
                <tr>
                    <td class="text-center text-light">{{this.id}}</td>
                    <td class="text-center text-light">{{this.title}}</td>
                    <td class="text-center text-light">$ {{this.price}}</td>
                    <td class="text-center text-light">{{this.thumbnail}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
{{/if}} 
{{#else}}
    <h3 class="alert alert-warning m-5">No se encontraron productos</h1>
{{/else}}
<br><br>
<a href="./"><button class="btn btn-danger mt-5">Volver</button></a>