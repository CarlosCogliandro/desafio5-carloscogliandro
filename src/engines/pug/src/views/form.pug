html(lang='en')
    head
        meta(charset='utf-8')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" 
            integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
        <link rel="stylesheet" href="../public/css/styles.css">
        title='Formulario - PUG'
    body
        div(class='container mt-3')
            div(class='jumbotron')
                h1(class='text-primary text-center') Ingrese Producto
                br
                form(action="/productos" method='post')
                    div(class='form-group')
                        label(for="title")
                            b Nombre
                        input(type="text" id='title' class='form-control' name='title' required)
                    div(class='form-group')
                        label(for="price")
                            b Precio
                        input(type="number" id='price' class='form-control' name='price' required)
                    div(class='form-group')
                        label(for="thumbnail")
                            b Foto URL
                        input(type="text" id='thumbnail' class='form-control' name='thumbnail' required)
                    div(class='d-flex justify-content-center')
                        button(class='btn btn-success mt-3') Enviar
            a(href="./productos")
                button(class='btn btn-danger') Ir a la lista de productos

